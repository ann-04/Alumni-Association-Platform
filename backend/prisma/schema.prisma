generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  name            String           @db.VarChar(50)
  email           String           @unique
  password        String           @db.VarChar(30)
  phone           String           @unique @db.VarChar(15)
  phoneVisibility PhoneVisibility  @default(PUBLIC)
  role            Role
  isVerified      Boolean?         @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  profile         Profile?
  student         Student?
  faculty         Faculty?
  education       Education[]
  socialMedia     SocialMedia?
  workExperience  WorkExperience[]
  jobsPosted      Job[]            @relation("JobPoster")
  eventsOrganized Event[]          @relation("EventOrganizer") 
  newsPosted      News[]           @relation("NewsAuthor")     
}

model Profile {
  id            Int            @id @default(autoincrement())
  user          User           @relation(fields: [userId], references: [id])
  userId        Int            @unique
  gender        Gender?        @default(NOT_SPECIFIED)
  maritalStatus MaritalStatus? @default(NOT_SPECIFIED)
  location      String?
  dob           DateTime?      @db.Date
  about         String?        @default("") @db.Text
  profilePicture String?       @db.VarChar(500)
}

model Student {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [userId], references: [id])
  userId      Int    @unique
  course      String @default("Diploma")
  branch      Branch
  joiningYear Int
  passingYear Int
  rollNo      String @unique
}

model Faculty {
  id          Int        @id @default(autoincrement())
  user        User       @relation(fields: [userId], references: [id])
  userId      Int        @unique
  jobTitle    String
  department  Department
  joiningYear Int
  leftYear    String
}

model Education {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
  institute   String
  degree      String
  branch      String
  joiningYear Int
  passingYear Int
}

model SocialMedia {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int     @unique
  facebook  String? @default("")
  instagram String? @default("")
  linkedin  String? @default("")
  twitter   String? @default("")
}

model WorkExperience {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
  company     String
  jobTitle    String
  joiningYear Int
  leftYear    String
}

// New Job model
model Job {
  id           Int      @id @default(autoincrement())
  title        String   @db.VarChar(200)
  description  String   @db.Text
  company      String   @db.VarChar(100)
  location     String   @db.VarChar(100)
  type         JobType  @default(FULL_TIME)
  salaryMin    Int?
  salaryMax    Int?
  requirements String?  @db.Text
  applicationLink String
  isActive     Boolean  @default(true)
  postedBy     User     @relation("JobPoster", fields: [postedById], references: [id])
  postedById   Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Events organized by alumni - AUTO-APPROVED
model Event {
  id               Int         @id @default(autoincrement())
  title            String      @db.VarChar(200)
  description      String      @db.Text
  eventType        EventType   @default(SEMINAR)
  date             DateTime    @db.Date
  time             String?     @db.VarChar(50)     // üïí Added: event time
  venue            String      @db.VarChar(200)
  duration         String?     @db.VarChar(100)
  speakerName      String?     @db.VarChar(100)
  speakerDetails   String?     @db.Text
  registrationLink String?     @db.VarChar(500)
  contactInfo      String?     @db.VarChar(200)
  contactEmail     String?     @db.VarChar(200)    // üìß Added
  bannerImage String? @db.Text
  externalLink     String?     @db.VarChar(500)
  maxParticipants  Int?        // üë• Added
  entryFee         String?     // üí∞ Added
  eligibility      String?     // üéØ Added
  tags             String?     // üè∑Ô∏è Added (comma separated list)
  status           EventStatus @default(APPROVED)
  organizer        User        @relation("EventOrganizer", fields: [organizerId], references: [id])
  organizerId      Int
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
}

// News and announcements
model News {
    id          Int      @id @default(autoincrement())
    title       String   @db.VarChar(200)
    content     String   @db.Text
    excerpt     String   @db.VarChar(500)
    image       String?  @db.VarChar(500)
    url         String?  @db.VarChar(1000)
    isPublished Boolean  @default(false)
    publishedAt DateTime?
    author      User     @relation("NewsAuthor", fields: [authorId], references: [id])
    authorId    Int
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

enum PhoneVisibility {
  PUBLIC
  PRIVATE
}

enum Role {
  STUDENT
  FACULTY
  ALUMNI
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  NOT_SPECIFIED
}

enum MaritalStatus {
  SINGLE
  MARRIED
  NOT_SPECIFIED
}

enum Branch {
  COMPUTER_SCIENCE
  MECHANICAL
  ARCHITECTURAL
  CIVIL
  ELECTRICAL
}

enum Department {
  COMPUTER_SCIENCE
  MECHANICAL
  ARCHITECTURAL
  CIVIL
  ELECTRICAL
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  REMOTE
  HYBRID
}

// Simplified enums - removed admin-related statuses
enum EventType {
    SEMINAR
    WORKSHOP
    GUEST_LECTURE
    MENTORSHIP_SESSION
    NETWORKING
    CONFERENCE
    CULTURAL
    SPORTS
    HACKATHON
    OTHER
}

enum EventStatus {
    APPROVED    // Default status - events are automatically approved
    CANCELLED   // Only status change allowed - if event needs to be cancelled
    COMPLETED   // For marking events as finished
}